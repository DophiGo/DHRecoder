<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/bg_recycle_divider</item>
    </style>

    <style name="FullActivity" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="style_text_item">
        <item name="android:textColor">@color/color_313131</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NoSpaceActionBarTheme" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <!-- toolbar标题样式 -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 背景样式 -->
    <style name="back" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_eeeeee</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="input_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/selector_bg_edit</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textColor">#2fa881</item>
        <item name="android:textCursorDrawable">@drawable/bg_input_cursor</item>
        <item name="android:textSize">13sp</item>
    </style>
    <!--密码input-->
    <style name="input_text_pwd" parent="input_text">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
    </style>

    <style name="input_layout_small" parent="input_layout">
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="logo_round">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/bg_scan_stop_normal</item>
    </style>

    <style name="textview_tips">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:drawableLeft">@drawable/bg_input_cursor</item>
        <item name="android:drawablePadding">13dp</item>
    </style>

    <style name="button_normal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/selecter_scan_stop</item>
        <item name="android:textColor">@color/color_ffffff</item>
    </style>

    <style name="button_red" parent="button_normal">
        <item name="android:background">@drawable/selecter_round_red</item>
    </style>

    <style name="coorlayout_contant">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="style_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_height">@dimen/item_hight</item>
        <item name="android:background">@color/color_ffffff</item>
    </style>
</resources>
